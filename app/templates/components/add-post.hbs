{{#if addPostForm}}
	<h3>Add a Post</h3>
	<form>
		<div class="form-group">
			<label for="author">Author</label>
			{{input type="text" id="author" value=author class="form-control"}}
		</div>
		<div class="form-group">
			<label for="heading">Heading</label>
			{{input type="text" id="heading" value=heading class="form-control"}}
		</div>
		<div class="form-group">
			<label for="image">Image Address</label>
			{{input type="text" id="image" value=image class="form-control"}}
		</div>
		<div class="form-group">
			<label for="content">Content</label>
			{{textarea id="content" class="form-control" rows="20" value=content}}
		</div>
		<button {{action 'savePost'}} class="btn btn-info">Save</button>
	</form>
{{else}}
	<button {{action 'addNewPost'}} class="btn btn-info">Add a new post</button>
{{/if}}
