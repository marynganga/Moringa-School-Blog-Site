<div class="well">
	<div class="well">
		<h5>Written by: {{post.author}}</h5>
	</div>
	<img src={{post.image}} alt="Post Image" width="500px" height="400px">
	<div class="well">
		{{post.content}} 
	</div>

	<div class="well">
		{{update-post post=post saveUpdatedPost='saveUpdatedPost'}}
		<button {{action 'deletePost' post}} class="btn btn-danger">Delete Post</button>
	</div>
</div>
